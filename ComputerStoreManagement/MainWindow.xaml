<Window x:Class="ComputerStoreManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ComputerStoreManagement"
        mc:Ignorable="d"
        Title="Computer Store Management" 
        Height="700" Width="1200"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" 
                Background="{StaticResource PrimaryBrush}"
                Effect="{DynamicResource MaterialDesignShadowDepth2}">
            <Grid>
                <TextBlock Text="COMPUTER STORE MANAGEMENT" 
                          VerticalAlignment="Center"
                          Margin="20,0,0,0"
                          FontSize="20"
                          FontWeight="Bold"
                          Foreground="White"/>
                
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           Margin="0,0,20,0">
                    <materialDesign:PackIcon Kind="Account" 
                                            Foreground="White"
                                            VerticalAlignment="Center"
                                            Margin="0,0,8,0"
                                            Width="24" Height="24"/>
                    <TextBlock x:Name="UserNameText"
                              VerticalAlignment="Center"
                              Foreground="White"
                              FontSize="14"
                              Margin="0,0,16,0"/>
                    <Button Content="ĐĂNG XUẤT"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Foreground="White"
                           Click="LogoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Sidebar Navigation -->
        <Border Grid.Row="1" Grid.Column="0" 
                Background="{StaticResource SurfaceBrush}"
                BorderThickness="0,0,1,0"
                BorderBrush="#E0E0E0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,10,0,0">
                    <!-- Dashboard -->
                    <Button x:Name="DashboardButton"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Height="50"
                           HorizontalContentAlignment="Left"
                           Padding="20,0,0,0"
                           Click="NavigationButton_Click"
                           Tag="Dashboard">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ViewDashboard" 
                                                    Width="24" Height="24"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,12,0"/>
                            <TextBlock Text="Dashboard" 
                                      VerticalAlignment="Center"
                                      FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Products -->
                    <Button x:Name="ProductsButton"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Height="50"
                           HorizontalContentAlignment="Left"
                           Padding="20,0,0,0"
                           Click="NavigationButton_Click"
                           Tag="Products">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Package" 
                                                    Width="24" Height="24"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,12,0"/>
                            <TextBlock Text="Sản phẩm" 
                                      VerticalAlignment="Center"
                                      FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Customers -->
                    <Button x:Name="CustomersButton"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Height="50"
                           HorizontalContentAlignment="Left"
                           Padding="20,0,0,0"
                           Click="NavigationButton_Click"
                           Tag="Customers">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountGroup" 
                                                    Width="24" Height="24"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,12,0"/>
                            <TextBlock Text="Khách hàng" 
                                      VerticalAlignment="Center"
                                      FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Orders -->
                    <Button x:Name="OrdersButton"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Height="50"
                           HorizontalContentAlignment="Left"
                           Padding="20,0,0,0"
                           Click="NavigationButton_Click"
                           Tag="Orders">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ShoppingCart" 
                                                    Width="24" Height="24"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,12,0"/>
                            <TextBlock Text="Đơn hàng" 
                                      VerticalAlignment="Center"
                                      FontSize="14"/>
                        </StackPanel>
                    </Button>
                    
                    <!-- Separator -->
                    <Separator Margin="10,10,10,10"/>

                    <!-- Employees -->
                    <Button x:Name="EmployeesButton"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Height="50"
                           HorizontalContentAlignment="Left"
                           Padding="20,0,0,0"
                           Click="NavigationButton_Click"
                           Tag="Employees">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountTie" 
                                                    Width="24" Height="24"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,12,0"/>
                            <TextBlock Text="Nhân viên" 
                                      VerticalAlignment="Center"
                                      FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Suppliers -->
                    <Button x:Name="SuppliersButton"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Height="50"
                           HorizontalContentAlignment="Left"
                           Padding="20,0,0,0"
                           Click="NavigationButton_Click"
                           Tag="Suppliers">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TruckDelivery" 
                                                    Width="24" Height="24"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,12,0"/>
                            <TextBlock Text="Nhà cung cấp" 
                                      VerticalAlignment="Center"
                                      FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Imports -->
                    <Button x:Name="ImportsButton"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Height="50"
                           HorizontalContentAlignment="Left"
                           Padding="20,0,0,0"
                           Click="NavigationButton_Click"
                           Tag="Imports">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="PackageDown" 
                                                    Width="24" Height="24"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,12,0"/>
                            <TextBlock Text="Nhập hàng" 
                                      VerticalAlignment="Center"
                                      FontSize="14"/>
                        </StackPanel>
                    </Button>

                    <!-- Reports -->
                    <Button x:Name="ReportsButton"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Height="50"
                           HorizontalContentAlignment="Left"
                           Padding="20,0,0,0"
                           Click="NavigationButton_Click"
                           Tag="Reports">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ChartBar" 
                                                    Width="24" Height="24"
                                                    VerticalAlignment="Center"
                                                    Margin="0,0,12,0"/>
                            <TextBlock Text="Báo cáo" 
                                      VerticalAlignment="Center"
                                      FontSize="14"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Content Area -->
        <Border Grid.Row="1" Grid.Column="1">
            <Frame x:Name="MainFrame" 
                  NavigationUIVisibility="Hidden"/>
        </Border>
    </Grid>
</Window>
