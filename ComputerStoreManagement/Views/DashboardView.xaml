<Page x:Class="ComputerStoreManagement.Views.DashboardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dashboard">

    <Grid Background="{StaticResource BackgroundBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Title -->
                <TextBlock Text="Dashboard" 
                          Style="{StaticResource TitleTextStyle}"/>

                <!-- Statistics Cards -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Today Revenue Card -->
                    <Border Grid.Column="0" Style="{StaticResource CardStyle}"
                           Background="{StaticResource PrimaryBrush}">
                        <StackPanel>
                            <TextBlock Text="Doanh thu hôm nay" 
                                      Foreground="White"
                                      FontSize="14"
                                      Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding TodayRevenue, Converter={StaticResource CurrencyConverter}}" 
                                      Foreground="White"
                                      FontSize="24"
                                      FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <!-- Today Orders Card -->
                    <Border Grid.Column="1" Style="{StaticResource CardStyle}"
                           Background="{StaticResource SuccessBrush}">
                        <StackPanel>
                            <TextBlock Text="Đơn hàng hôm nay" 
                                      Foreground="White"
                                      FontSize="14"
                                      Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding TodayOrders}" 
                                      Foreground="White"
                                      FontSize="24"
                                      FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <!-- Low Stock Products Card -->
                    <Border Grid.Column="2" Style="{StaticResource CardStyle}"
                           Background="{StaticResource WarningBrush}">
                        <StackPanel>
                            <TextBlock Text="Sản phẩm sắp hết" 
                                      Foreground="White"
                                      FontSize="14"
                                      Margin="0,0,0,8"/>
                            <TextBlock Text="{Binding LowStockProducts}" 
                                      Foreground="White"
                                      FontSize="24"
                                      FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Welcome Message -->
                <Border Style="{StaticResource CardStyle}" Margin="8,16,8,8">
                    <StackPanel>
                        <TextBlock Text="Chào mừng trở lại!" 
                                  Style="{StaticResource SubtitleTextStyle}"/>
                        <TextBlock Text="{Binding CurrentUserName, StringFormat='Xin chào, {0}!'}" 
                                  FontSize="16"
                                  Foreground="Gray"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
